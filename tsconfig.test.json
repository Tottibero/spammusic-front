{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": ".tmp-tests",
    "noEmit": false,
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "declaration": false,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@stores/*": ["src/stores/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@helpers/*": ["src/helpers/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "src/stores/auth/loadRoles.ts",
    "tests/unit/auth/loadRoles.test.ts"
  ]
}
