{
  "branches": ["main", "ordenacion"],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix",  "section": "üêû Correcciones" },
            { "type": "build","section": "üì¶ Paquetes incluidos" },
            { "type": "perf", "section": "‚ö°Ô∏è Performance" },
            { "type": "refactor", "section": "‚ôªÔ∏è Refactor" },
            { "type": "docs", "section": "üìù Docs" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "chore", "hidden": true }
          ]
        }
      }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/npm", { "npmPublish": false }],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
